<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdicionarActivity">

    <TextView
            android:text="Demandante:"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintBaseline_toBaselineOf="@+id/demandanteInfo"
            app:layout_constraintEnd_toStartOf="@+id/demandanteInfo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" android:layout_marginEnd="11dp"
    />
    <TextView
            android:text="Prazo:"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toStartOf="@+id/prazoInfo" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" android:layout_marginEnd="8dp"
    />
    <TextView
            android:text="Area:"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toStartOf="@+id/areaInfo"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/remuneradoInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Email:"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toBottomOf="@+id/demandanteInfo"
            app:layout_constraintEnd_toStartOf="@+id/emailInfo" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" android:layout_marginEnd="7dp"
    />
    <TextView
            android:text="Descrição do Desafio:"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintTop_toBottomOf="@+id/remuneradoInfo" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/resumoInfo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="34dp" android:layout_marginEnd="34dp" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:id="@+id/nomeInfo"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" android:textAlignment="center"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:id="@+id/demandanteInfo"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5" android:layout_marginEnd="36dp"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:id="@+id/emailInfo"
            android:textSize="18sp"
            android:layout_marginTop="58dp"
            app:layout_constraintStart_toEndOf="@+id/textView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="58dp" app:layout_constraintTop_toTopOf="@+id/demandanteInfo"
            app:layout_constraintBottom_toBottomOf="@+id/prazoInfo" android:layout_marginEnd="35dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/prazoInfo"
            android:textSize="18sp"
            android:layout_marginTop="63dp"
            app:layout_constraintStart_toEndOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="68dp" app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/areaInfo" android:layout_marginEnd="36dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="0dp"
            android:id="@+id/areaInfo"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textView7"
            android:layout_marginEnd="36dp" app:layout_constraintVertical_bias="0.792" android:layout_height="49dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/resumoInfo"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="34dp" android:layout_marginEnd="34dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Nome do Desafio:"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" android:textAlignment="center"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="103dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/demandanteInfo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
            android:text="Remunerado"
            android:clickable="false"
            android:layout_width="148dp"
            android:layout_height="42dp"
            android:id="@+id/remuneradoInfo"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
</android.support.constraint.ConstraintLayout>