<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="7dp"
        app:contentPadding="8dp"
        android:layout_margin="5dp"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:text="nome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/recyclerview_nome" android:textSize="20sp"
                android:textColor="@color/design_default_color_primary_dark" android:textStyle="bold"/>
        <TextView
                android:text="prazo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/recyclerview_prazo"
                android:textColor="@android:color/darker_gray" android:textSize="15sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>